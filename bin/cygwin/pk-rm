#!/bin/bash

set -e

. pk-common

package="$1"
dir=`pk-build-dir "$2"`

echo "Target dir is $dir"

build_dir="$dir/"`pk-root-dir "$dir"`

[ -z "$package" ] && { echo "ERROR: package not specified"; exit 1; }

name=`pk-find-fun "$package" "$dir/list" "list"`

echo "remove $name"

list_file="$dir/list/$name.list"

cd "$build_dir"
rm `cat "$list_file"`
rm "$list_file"

# rm package from local dir if needed
[ "$dir" != "/build" ] && rm "$dir/packages/$name.tar.bz2"
