#!/bin/bash

set -e

. pk-common

name="$1"
dir=`pk-build-dir "$2"`

echo "Target dir is $dir"

build_dir="$dir/"`pk-root-dir "$dir"`

[ -z "$name" ] && { echo "ERROR: package not specified"; exit 1; }

echo "remove $name"

list_file="$dir/list/$name.list"

cd "$build_dir"
rm `cat "$list_file"`
rm "$list_file"

# rm package from local dir if needed
file=`pk-pkg-to-tar "$name"`
[ "$dir" != "/build" ] && rm "$dir/packages/$file"
