#!/bin/bash

set -e

. pk-common

PACKAGE="$1"

[ -z "$PACKAGE" ] && { echo "ERROR: package not specified"; exit 1; }

PACKAGE_NAME=`pk-find-fun "$PACKAGE" "$LIST_DIR" "list"`

echo "remove $PACKAGE_NAME"

LIST_FILE="$LIST_DIR/$PACKAGE_NAME.list"
cd "$BUILD_PATH"
rm `cat "$LIST_FILE"`
rm "$LIST_FILE"
