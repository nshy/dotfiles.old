#!/bin/bash

. pk-common

name="$1"

pk-create-local-dirs
dir=`readlink -f .`

[ -z "$name" ] && { echo "ERROR: package not specified"; exit 1; }

echo "remove $name"

tmp_list=`pk-make-tmp`
pk-print-tar-files "$name" "$dir/packages" > "$tmp_list"

cd libs
rm `cat "$tmp_list"`
cd ..
rm -r "packages/$name"
