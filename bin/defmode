#!/bin/bash
# Usage: PROGRAM_NAME DIR ...
# Changes recursively permissions
#   755 for directories
#   644 for files

set -e

. functions

test -z "$1" -o $"$1" = "--help" && {
  print_help "$0"
  exit 1
}

for dir in "$@"; do
  chmod -R a+r,u+w "$dir"
  find "$dir" -type d -print0 | xargs -0 chmod a+x
done
